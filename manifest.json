{
    "manifest_version": 3,
    "name": "Games Library Scraper",
    "description": "Get a list of all your games from Epic Games and GOG.com",
    "version": "1.0",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/icon-16.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "*://*.epicgames.com/*",
        "*://*.gog.com/*"
    ]
}